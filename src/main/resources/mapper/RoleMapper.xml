<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leaf.xadmin.mapper.RoleMapper">
    <sql id="ROLE_COLS">
        r.id, r.name, r.desc, r.create_time, r.update_time
    </sql>

    <select id="selectRoles" resultType="com.leaf.xadmin.entity.Role">
        SELECT <include refid="ROLE_COLS" />
        FROM user u
        RIGHT JOIN user_role ur ON u.id = ur.user_id
        LEFT JOIN role r ON ur.role_id = r.id
        WHERE u.name = #{name}
    </select>

</mapper>